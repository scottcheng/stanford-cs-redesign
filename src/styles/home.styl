#home-content
  height calc(100% - 210px) // header height = 210px
  color #fff
  #news, #events
    height 100%
    float left
  #news
    width 'calc((100% - %s) / 2 + 9 * %s - %s)' % (container-width (gutter-width + column-width) gutter-width)
  #events
    width 'calc((100% - %s) / 2 + 3 * %s + %s)' % (container-width (gutter-width + column-width) (gutter-width * 2))

  #news
    position relative
    background-image url(../assets/news.png)
    background-size cover
    background-position 50% 50%

    .text
      absolute bottom right 420px
      width 9 * (gutter-width + column-width) - gutter-width - 420px
      cursor pointer
      transition color .25s
      &:hover
        color rgba(#fff, .75)
    .content
      display inline-block
      background rgba(yellow, .9)
      padding 20px
      line-height 1.5
    .title
      font-size font-size-xl
      .content
        padding-bottom 10px
    .subtitle
      font-style italic
      .content
        max-width 80%
        font-weight 300
        padding-top 10px

  #events
    background blue
    position relative
    z-index 10
    .event
      height calc((100% - 63px) / 3)
      position relative
      .content
        absolute top 50% left gutter-width
        width 3 * 102px
        transform translateY(-50%)
      &:nth-child(2)
        background rgba(#fff, .1)
      &:nth-child(3)
        background rgba(#fff, .2)
      .meta-1, .meta-2
        font-weight 300
        *
          display inline-block
          margin-right 15px
      .meta-1
        text-transform uppercase
        font-size font-size-sm
        letter-spacing 1px
      .title
        font-size font-size-ml
        font-weight 600
        margin 10px 0
    .more
      background rgba(#fff, .3)

    .event, .more
      padding 20px 30px
      cursor pointer
      transition color .25s
      &:hover
        color rgba(#fff, .75)
