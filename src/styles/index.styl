@import 'nib'
@import './iconfont.css'

cardinal = #8c1515
red = #e44949
blue = #6fc9ed
yellow = #ffdd59

font-size-sm = 13px
font-size-md = 16px
font-size-ml = 20px
font-size-lg = 24px
font-size-xl = 42px

*, *:before, *:after
  box-sizing border-box

a, a:hover, a:active, a:focus, a:visited
  color inherit
  text-decoration none
  outline none

html, body#home
  height 100%

container-width = 1200px
gutter-width = 24px
column-width = (container-width - gutter-width * 13) / 12

body
  font-size 16px
  font-family 'Source Sans Pro', sans-serif
  margin 0
  min-width container-width
  color #fff
  font-size font-size-md
  min-height 800px
  overflow-x hidden

.container
  width container-width
  margin 0 auto
  padding 0 gutter-width

rotate-angle = 2deg

header
  background red
  padding 50px 0
  position relative
  z-index 1

  &:after
    content ''
    display block
    background linear-gradient(top, rgba(cardinal, .75), transparent)
    absolute bottom left (-100px)
    width 'calc((100% - %s) / 2 + 100px + 320px)' % container-width
    height 200%
    transform rotate(rotate-angle)
    transform-origin bottom left

  &:before
      content ''
      display block
      background red
      absolute bottom left
      width 120%
      height 200px
      transform rotate(rotate-angle)
      transform-origin bottom left

  .container
    position relative
    z-index 10

  img.logo
    width 250px

  .tagline
    margin-top 25px
    font-size font-size-lg
    font-weight 300

  .right
    absolute top -4px right gutter-width
    .login
      text-align right
    nav
      margin-top 15px
      font-size font-size-ml
      letter-spacing 0.5px
    .nav-link
      display inline-block
      margin-right 45px
    .icon-search
      font-size .8em
    .nav-link, .login, .icon-search
      transition opacity .25s
      cursor pointer
      &:hover
        opacity .75

body#home header
  height 210px

@import 'home'
